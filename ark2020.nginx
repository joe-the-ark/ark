server {
    listen 443;
    server_name test.arks.ch;

    ssl on;
    ssl_certificate /etc/letsencrypt/live/test.arks.ch/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/test.arks.ch/privkey.pem;

    location /static {
      root /var/ark2020;
    }

    location /media {
      root /var/ark2020;
    }

    location / {
      proxy_pass http://127.0.0.1:8888;

    }
}

server {
    listen 80;
    server_name test.arks.ch;
    
    return 302 https://test.arks.ch$request_uri;
}
